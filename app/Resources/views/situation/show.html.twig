{% extends 'base.html.twig' %}

{% block body %}
    <h1>Situation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ situation.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ situation.type }}</td>
            </tr>
            <tr>
                <th>Finance</th>
                <td>{{ situation.finance }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ situation.langue }}</td>
            </tr>
            <tr>
                <th>Informatique</th>
                <td>{{ situation.informatique }}</td>
            </tr>
            <tr>
                <th>Motivation</th>
                <td>{{ situation.motivation }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('situation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('situation_edit', { 'id': situation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
